<!-- bronnen: -->
<!-- Liquid `escape` filter: https://shopify.github.io/liquid/filters/escape/ -->
<!-- Liquid issue  https://github.com/Shopify/liquid/issues/223 -->
<!-- Accessibility (scope in tabellen): https://webaim.org/techniques/tables/data#scope -->


<!-- CSS laden -->
{% render 'partials/head.liquid' %}


<!-- Header -->
  <header class="header"> <h1 class="visually-hidden">Embassy of the Free Mind</h1>

  <!-- Achtergrondafbeelding -->
  <picture>
    <!-- AVIF -->
    <source srcset="/assets/images/art.avif" type="image/avif">

    <!-- WebP -->
    <source srcset="/assets/images/art.webp" type="image/webp">

    <!-- PNG fallback -->
    <img
      src="/assets/images/art.png"
      alt="Decoratieve achtergrondafbeelding"
      class="background-image"
      loading="lazy"
      width="1920"
      height="1080"
      style="width: 100%; height: auto; object-fit: cover;">
  </picture>


  <div class="header-overlay"></div>

  <!-- Navigatie -->
  <nav class="glass-box">

    <!-- Hamburger menu  svg -->
    <button class="menu-toggle" type="button">
      <span class="visually-hidden">Menu openen</span>
      <svg
        width="30"
        height="30"
        viewBox="0 0 100 80"
        fill="#333">
        <rect
          width="100"
          height="10"
          rx="5"></rect>
        <rect
          y="30"
          width="100"
          height="10"
          rx="5"></rect>
        <rect
          y="60"
          width="100"
          height="10"
          x="5"></rect>
      </svg>
    </button>

    <!-- Logo -->
    <picture class="logo-container">
      <source srcset="assets/images/logo.avif" type="image/avif">
      <source srcset="assets/images/logo.webp" type="image/webp">
      <img
        src="assets/images/logo.png"
        alt="Embassy of the Free Mind logo"
        class="logo-img"
        loading="lazy">
    </picture>

  </nav>
</header>


<!-- Hoofdinhoud -->
<main>

  <!-- Zoekbalk -->
  <section class="search-bar">
    <h2 class="visually-hidden">Zoekfunctie</h2>
    <form
      action="/"
      method="get"
      class="search-form">
      <label for="search-input" class="visually-hidden">Zoeken in de collectie</label>
      <div class="search-input-wrapper">
        <input
          id="search-input"
          type="search"
          name="q"
          placeholder="Hier zoeken..."
          value="{{ filters.q | escape }}" />
        <button type="button" class="micButton">
          <svg
            class="micIcon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 384 512">
            <path d="M192 0C139 0 96 43 96 96V256c0 53 43 96 96 96s96-43 96-96V96c0-53-43-96-96-96zM64 216c0-13.3-10.7-24-24-24s-24 10.7-24 24v40c0 89.1 66.2 162.7 152 174.4V464H120c-13.3 0-24 10.7-24 24s10.7 24 24 24h72 72c13.3 0 24-10.7-24-24s-10.7-24-24-24H216V430.4c85.8-11.7 152-85.3 152-174.4V216c0-13.3-10.7-24-24-24s-24 10.7-24 24v40c0 70.7-57.3 128-128 128s-128-57.3-128-128V216z" />
          </svg>
        </button>
      </div>
      <button type="submit">Zoeken</button>
    </form>
  </section>
</main>


<!-- Filter dropdowns voor auteur, plaats en jaar -->
{% render "partials/filter-options.liquid", filters: filters, auteurs: auteurs, plaatsen: plaatsen, jaren: jaren %}

<!-- Actieve filters als chips met verwijderknoppen -->
{% render "partials/active-filters.liquid", filters: filters %}

<!-- Resultatenoverzicht en telling -->
{% render "partials/resultaten.liquid", boeken: boeken, gefilterdAantal: gefilterdAantal, totaalAantal: totaalAantal, filters: filters %}

<!-- Detailweergave van geselecteerd boek -->
{% render "partials/detail.liquid", geselecteerdBoek: geselecteerdBoek %}

<!-- Footer -->
{% render "partials/footer.liquid" %}