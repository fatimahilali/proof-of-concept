<!-- CSS  laden -->
{% render 'partials/head.liquid' %}

<!-- Alleen tonen als er actieve filters zijn -->
{% if filters.auteur != blank or filters.plaats != blank or filters.jaar != blank %}
  <section class="active-filters">
    <h4 class="visually-hidden">Actieve filters</h4>

    <!-- Actieve filter: Auteur -->
    {% if filters.auteur != blank %}
      <div class="filter-chip" title="Verwijder auteur filter">
        <span>{{ filters.auteur | escape }}</span>
        <a
          href="?plaats={{ filters.plaats | escape }}&jaar={{ filters.jaar | escape }}"
          class="remove-icon"
          title="Verwijder auteur filter">
          <svg
            viewBox="0 0 16 16"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" />
          </svg>
        </a>
      </div>
    {% endif %}

    <!-- Actieve filter: Plaats -->
    {% if filters.plaats != blank %}
      <div class="filter-chip" title="Verwijder plaats filter">
        <span>{{ filters.plaats | escape }}</span>
        <a
          href="?auteur={{ filters.auteur | escape }}&jaar={{ filters.jaar | escape }}"
          class="remove-icon"
          title="Verwijder plaats filter">
          <svg
            viewBox="0 0 16 16"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" />
          </svg>
        </a>
      </div>
    {% endif %}

    <!-- Actieve filter: Jaar -->
    {% if filters.jaar != blank %}
      <div class="filter-chip" title="Verwijder jaar filter">
        <span>{{ filters.jaar | escape }}</span>
        <a
          href="?auteur={{ filters.auteur | escape }}&plaats={{ filters.plaats | escape }}"
          class="remove-icon"
          title="Verwijder jaar filter">
          <svg
            viewBox="0 0 16 16"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" />
          </svg>
        </a>
      </div>
    {% endif %}
  </section>
{% endif %}